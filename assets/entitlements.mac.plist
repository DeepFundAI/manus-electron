<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- Allows Just-In-Time compilation required by V8 JavaScript engine in Electron -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- This is needed for the V8 JavaScript engine to function properly -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allows DYLD environment variables (required for some native modules) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- Disable library validation (allows loading third-party frameworks) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Allows network connections -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allows outgoing network connections -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Allows access to microphone for speech recognition -->
    <key>com.apple.security.device.microphone</key>
    <true/>

    <!-- Allows access to camera -->
    <key>com.apple.security.device.camera</key>
    <true/>

    <!-- Allows read and write access to files explicitly selected by the user through system dialogs -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allows read and write access to the user's Downloads directory -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Allows automation of other apps (for accessibility features like nut.js) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
  </dict>
</plist>